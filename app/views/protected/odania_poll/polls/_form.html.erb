<%= form_for([:protected, @poll]) do |f| %>
	<%= render partial: 'odania/shared/errors', locals: {obj: @poll} %>

	<div class="field">
		<%= f.label :question %>
		<br/>
		<%= f.text_area :question %>
	</div>
	<div class="field">
		<%= f.label :due_date %>
		<br/>
		<%= f.date_select :due_date %>
	</div>

	<%= f.fields_for :answers do |answer| %>
		<%= answer.hidden_field :id %>
		<div class="field">
			<%= answer.label :answer %>: <%= answer.text_field :answer %>
			<br/>
		</div>
	<% end %>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
